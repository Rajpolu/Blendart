---
import '../styles/main.css'

const heading = " Blendart - A Photo Editor App";
const subheading = "Blendart, A professional photo editor allows users can Edit, Filter, Change effects and more with AI ";
const appIcon = "/images/app-icon.png";
const appScreenshot = "/images/app-screenshot.png";
const footerImage = "/images/banners.svg";
const badges = [
	{
		link: "https://apps.apple.com/us/app/party-banner/id1610931185",
		image: "/images/app-store-badge.svg"
	},
	{
		link: "https://apkpure.com/blendart-a-photo-editor-app/com.Blendart.photoEditor.pro",
		image: "/images/google-play-badge.png"
	},
];
const authors = [
	{
		name: "Rajasekhar Reddy Polu",
		url: "https://rajasekharreddypolu.netlify.com"
	},
];
const pageTitle = "App Showcase"
const favicon = "/images/favicon.png"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="container">
			<main>
				<div class="text-container">
					<img src={appIcon} class="app-icon">
					<h1 class="heading">{heading}</h1>
					<h2 class="subheading">{subheading}</h2>
					<div class="badge-container">
						{badges.map(badge => (
							<div>
								<a href={badge.link} target="_blank">
									<img src={badge.image} class="badge" />
								</a>
							</div>
						))}
					</div>
					<p class="authors">Made with &#x2665; by 
						{authors.map((author, index) => (
								<span>
									{index > 0 ? (index === authors.length - 1 ? ' and ' : ', ') : ''}
									<a href={author.url} target="_blank">{author.name}</a>
								</span>
						))}
					</p>
				</div>
				<div>
					<img src={appScreenshot} class="app-screenshot">
				</div>
			</main>
			<footer>
				<img src={footerImage} class="footer-image">
			</footer>
		</div>
	</body>
</html>
